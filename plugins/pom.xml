<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.pentaho.di.plugins</groupId>
  <artifactId>pdi-plugins</artifactId>
  <version>8.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>PDI plugins</name>

  <parent>
    <groupId>org.pentaho.di</groupId>
    <artifactId>pdi-parent</artifactId>
    <version>8.0-SNAPSHOT</version>
  </parent>
  
  <profiles>
  
    <profile>
      <id>lowdeps</id>
      <activation>
        <property>
          <name>!skipDefault</name>
        </property>
      </activation>
      <modules>
        <module>kettle5-log4j-plugin</module>
      </modules>
    </profile>
  
    <profile>
      <id>highdeps</id>
      <activation>
        <property>
          <name>!skipDefault</name>
        </property>
      </activation>
      <modules>
        <module>file-open-save-plugin</module>
        <module>repositories-plugin</module>
        <module>meta-inject-plugin</module>
        <module>pdi-engine-configuration</module>
        <module>get-previous-row-field</module> 
        <module>aggregate-rows</module>
        <module>elasticsearch-bulk-insert</module>
        <module>googleanalytics</module>
        <module>gp-bulk-loader</module>
        <module>kettle-hl7-plugin</module>
        <module>kettle-drools5-plugin</module>
        <module>kettle-dummy-plugin</module>
        <module>kettle-json-plugin</module>
        <module>kettle-s3csvinput-plugin</module>
        <module>kettle-sap-plugin</module>
        <module>kettle-shapefilereader-plugin</module>
        <module>kettle-gpload-plugin</module>
        <module>kettle-openerp-plugin</module>
        <module>kettle-palo-plugin</module>
        <module>kettle-version-checker</module>
        <module>lucid-db-streaming-loader</module>
        <module>salesforce</module>
        <module>pdi-pur-plugin</module>
        <module>ms-access-bulk-loader</module>
        <module>pdi-xml-plugin</module>
      </modules>
    </profile>
    
  </profiles>
</project>
